<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
    <div class="col-8 offset-3 mt-3"><h3><%=listing.title%></h3></div>    
    
    <div class="card col-6 offset-3 mt-2 show-card listing-card">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing image">
  <div class="card-body">
        <%=listing.description%><br>
        &#x20B9;<%=listing.price.toLocaleString("en-IN")%><br>
         <%=listing.location%><br>
         <%=listing.country%><br>

    </p>
  </div>
    </div>

    <div class="btns mt-1" >
        <a href="/listings/<%=listing.id%>/edit" class="btn btn-dark add-btn col-1 offset-3">Edit</a>
         <form action="/listings/<%=listing.id%>?_method=DELETE" method="POST">
             <button type="submit" class="btn btn-dark  offset-6">Delete</button>
         </form>
    </div>
    
  
    <div  class="col-8 offset-3 mt-3">
      <hr>
      <h4>Leave a Review</h4>
      <form class="mb-3 needs-validation" action="/listings/<%=listing.id%>/reviews" method="POST" novalidate >
        <div class="mb-3 mt-3">
          <label for="Rating" class="form-label">Rating</label><br>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" ><br>
        </div>
        
        <div class="mb-3 mt-3">
          <label for="comment"  class="form-label">Comments</label>
          <textarea id="comment" name="review[comment]" rows="5" cols="30" class="form-control" required></textarea>
          <div class="invalid-feedback">
            Please add some comments for review!
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr>
      <p><b>All Reviews</b></p>
      <div class="row">
      <% for(review of listing.reviews){ %>
        <div class="card mb-3 ms-3 col-5">
        <div class="card-body">
          <h5 class="card-title">jane</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%>stars</p>
        </div>
        <form  class="mb-3 mt-2" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
         <button class="btn btn-sm btn-dark">Delete</button> 
        </form>
      </div>
        
      <% } %>
      </div>
     


    </div>
    </div>
   

